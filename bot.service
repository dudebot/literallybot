[Unit]
Description=Literally a Discord Bot
Wants=network-online.target
After=network.target

[Service]
WorkingDirectory=/path/to/discordbot
ExecStart=/usr/bin/python3 /path/to/discordbot/discordbot.py
ExecStop=pkill -9 -f discordbot.py
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target